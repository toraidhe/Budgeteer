@model Budgeteer.Areas.Admin.ViewModels.Roles.ListRolesViewModel
@using System.Threading.Tasks
@using Budgeteer.Areas.Admin.ViewModels.Roles
@using Budgeteer.Data.ViewModels.Manage
@using Microsoft.AspNetCore.Http.Authentication
@{
    ViewData["Title"] = "Manage the application roles";
}

<h2>@ViewData["Title"].</h2>

<p class="text-success">@ViewData["StatusMessage"]</p>
@if (Model.ApplicationRoles.Count > 0 )
{
    <h4>Configured Roles</h4>
    <table class="table">
        <tbody>
            @for (var index = 0; index < Model.ApplicationRoles.Count; index++)
            {
                <tr>
                    <td>@Model.ApplicationRoles[index].Name</td>
                    <td>@Model.ApplicationRoles[index].Description</td>
                    <td>
                            <form asp-area="Admin" asp-controller="Roles" asp-action="Delete" method="post" class="form-horizontal">
                                <div>
                                    <input asp-for="@Model.ApplicationRoles[index]" name="ApplicationRole" type="hidden" />
                                    <input type="submit" class="btn btn-default" value="Remove" title="Remove the role @Model.ApplicationRoles[index].Name from the system." />
                                </div>
                            </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}